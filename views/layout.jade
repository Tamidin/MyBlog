doctype html
html
  head
    title= title
    link(rel="stylesheet" href="/styles/bootstrap.css")
    link(rel="stylesheet" href="/styles/bootstrap-responsive.css")
    link(href="/styles/blog.css" rel="stylesheet")
  body
    div(class="page-wrapper")
      div(class="blog-masthead")
        div(class="container")
          nav(class="blog-nav")
            a(class="blog-nav-item" href="/") Главная
      div(class="modal fade bs-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true") 
        div(class="modal-dialog modal-sm")
          div(class="modal-content")
            div(class="modal-header")
              button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
              h2(class="form-signin-heading" id="myModalLabel") Авторизация
            div(class="modal-body")
              form(method='post', action='/auth' class="form-signin" role="form")
                div(class="form-group")
                  input(name='user[login]' type="login" class="form-control input-sm" placeholder="login" required autofocus)
                div(class="form-group")
                  input(name='user[pass]' type="password" class="form-control input-sm" placeholder="Password" required)
                div(class="form-group")
                  button(class="btn btn-primary btn-block" type="submit") Войти
              button(class="btn btn-primary btn-block" onclick="location.href='/registration'") Зарегистрироваться
            div(class="modal-footer")
              a(href="/auth/linkedin")
                img(src="/images/linkedin.png")
              a(href="/auth/vkontakte")
                img(src="/images/vk.png")
      div(class="container")
        div(class="blog-header")
          h1(class="blog-title")= blog_title
          p(class="lead blog-description")= blog_descr
      div(class="container")      
        div(class="row")
          div(class="col-sm-8 blog-main")
            block content
          div(class="col-sm-3 col-sm-offset-1 blog-sidebar")
            div(class="panel panel-default")
              div(class="panel-body")
                if user
                  p= "Привет, "+user.login
                  if user && user.role=='admin'
                    div(class="form-group")
                      button(class="btn btn-primary btn-block" onclick="location.href='../post/new'") Добавить запись
                  form(method='post', action='../auth')
                    input(type="hidden" name="_method" value="delete")
                    div(class="form-group")
                      button(class="btn btn btn-primary btn-block" type=submit) Выйти
                else
                  h3 Авторизация
                  button(type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target=".bs-modal-sm") Войти
        div(class="page-buffer")
    div(class="blog-footer")
      p Created by Tai
        br
        a(href="#") Наверх
    script(src="http://code.jquery.com/jquery-latest.js")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js")